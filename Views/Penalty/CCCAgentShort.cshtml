@model ComplaintTracker.Models.CCCAgent
@{
    ViewBag.Title = "CCCAgentShort";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var fromDate = (DateTime)ViewBag.fromDate;
}


<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        $('#fromDate1').datetimepicker();
    });
</script>
<div class="header">
    <h1 class="header-title">
        CCC Agent Short Information
    </h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Dashboard/Index">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">CCC Agent Short Information</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("SaveCCCAgentShort", "Penalty", FormMethod.Post))
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Search By</h5>
                    <h6 class="card-subtitle text-muted">
                        Search with
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-12 col-lg-3">
                            <label for="User_Name">Start Time</label>
                            <div class="input-group date" id="fromDate1" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" data-target="#fromDate1" id="fromDate" name="fromDate" />
                                <div class="input-group-text" data-target="#fromDate1" data-toggle="datetimepicker">
                                    <i class="fa fa-calendar"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3">
                            <label for="ShortType">Agent Short Type</label>
                            @Html.DropDownList("ddlUniformType", new List<SelectListItem>
                            {
                            new SelectListItem{ Text="CCC Agent", Value = "1" },
                            new SelectListItem{ Text="Helpdesk Agent", Value = "2" },
                            new SelectListItem{ Text="FRT Agent", Value = "3" },

                            }, new { @class = "form-control select2", id = "UniformType" })
                        </div>
                        <div class="col-12 col-lg-3">
                            <label for="number">Number</label>
                            @Html.EditorFor(model => model.number, new { htmlAttributes = new { @class = "form-control", @placeholder = "Number" } })
                        </div>
                        <div class="col-12 col-lg-3 mt-3">
                            <input type="submit" value="Save" class="btn btn-dark btn-block" id="btnSave" />
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>


